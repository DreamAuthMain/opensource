{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "build": "lerna run build",
    "test": "tsc && npm run lint --max-warnings=0 && jest --no-cache",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group",
    "release": "catch-uncommitted --exclude=.npmrc && lerna publish from-package --no-git-tag-version --no-push --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@isoauth/prepublish": "*",
    "@lerna-lite/cli": "^1.17.0",
    "@lerna-lite/publish": "^1.17.0",
    "@lerna-lite/run": "^1.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.21.2",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.15.3",
    "@types/node-fetch": "^2.6.2",
    "catch-uncommitted": "^2.0.0",
    "eslint": "^8.36.0",
    "eslint-config-rational": "^2.0.16",
    "glob": "^9.3.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "node-fetch": "^2.6.9",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "rational",
      "rational/react",
      "rational/warn",
      "rational/prettier"
    ],
    "ignorePatterns": [
      "node_modules",
      "lib",
      "out",
      "dist"
    ],
    "overrides": [
      {
        "files": [
          "*.cjs"
        ],
        "parserOptions": {
          "sourceType": "script"
        }
      },
      {
        "files": [
          "*.mjs"
        ],
        "parserOptions": {
          "sourceType": "module"
        }
      },
      {
        "files": [
          "*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        }
      },
      {
        "extends": [
          "rational/typescript",
          "rational/prettier"
        ],
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "parserOptions": {
          "project": "./tsconfig.json"
        }
      }
    ],
    "root": true
  }
}
