{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "clean": "rm -rf out packages/*/out lib packages/*/lib node_modules packages/*/node_modules",
    "lint": "eslint 'packages/*/src/**/*.{js,cjs,ts,tsx}'",
    "build": "werk -p build",
    "test": "npm run build && npm run lint -- --max-warnings=0 && werk vitest run",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.6.0",
    "@vitest/coverage-v8": "^0.34.4",
    "@werk/cli": "^3.0.2",
    "@werk/command-build": "^1.1.30",
    "@werk/command-exec": "^1.2.7",
    "@werk/command-list": "^1.1.10",
    "@werk/command-publish": "^2.0.3",
    "@werk/command-run": "^3.0.8",
    "@werk/command-version": "^3.0.2",
    "@werk/command-vitest": "^1.1.10",
    "eslint": "^8.49.0",
    "eslint-config-rational": "^3.0.8",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4",
    "vitest-fetch-mock": "^0.2.2"
  }
}
