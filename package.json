{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "lint": "lerna run eslint .",
    "test": "jest",
    "build": "lerna run build --concurrency=1",
    "clean": "rm -rf out **/out lib **/lib node_modules **/node_modules",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "extends": "./config/.eslintrc.cjs"
  },
  "jest": {
    "preset": "./config/jest.config.cjs"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.17.0",
    "@lerna-lite/exec": "^1.17.0",
    "@lerna-lite/publish": "^1.17.0",
    "@lerna-lite/run": "^1.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.21.2",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.15.3",
    "@types/node-fetch": "^2.6.2",
    "catch-uncommitted": "^2.0.0",
    "eslint": "^8.36.0",
    "eslint-config-rational": "^2.0.16",
    "glob": "^9.3.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-runner-eslint": "^2.0.0",
    "node-fetch": "^2.6.9",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
