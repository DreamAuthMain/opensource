{
  "private": true,
  "name": "root",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "clean": "rm -rf out packages/*/out lib packages/*/lib node_modules packages/*/node_modules",
    "lint": "eslint 'packages/*/src/**/*.{js,cjs,ts,tsx}'",
    "build": "werk -p build",
    "test": "npm run build && npm run lint && werk vitest run",
    "modernize": "npx npm-check-updates@latest -i --workspaces --root --format group"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=8",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "engineStrict": true,
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.44.0",
    "@types/node": "^20.4.2",
    "@vitest/coverage-v8": "^0.33.0",
    "@werk/command-build": "^1.1.5",
    "@werk/command-exec": "^1.1.2",
    "@werk/command-publish": "^1.4.3",
    "@werk/command-run": "^1.2.2",
    "@werk/command-version": "^1.3.4",
    "@werk/command-vitest": "^1.1.2",
    "eslint": "^8.44.0",
    "eslint-config-rational": "^3.0.5",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0",
    "vitest-fetch-mock": "^0.2.2"
  }
}
